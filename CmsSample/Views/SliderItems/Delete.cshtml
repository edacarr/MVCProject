@model CmsSample.Models.SliderItem
@{
    ViewData["Title"] = "Slider Sil";
}

<h2>Slider Sil</h2>

<div class="alert alert-warning">
    <p>
        <strong>@Model.Caption</strong> başlıklı slider öğesini silmek üzeresiniz.<br />
        Bu işlem geri alınamaz. Emin misiniz?
    </p>
</div>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button class="btn btn-danger">Evet, sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>