@*  Views/Pages/Delete.cshtml  *@
@model CmsSample.Models.StaticPage
@{
    ViewData["Title"] = "Sayfayı Sil";
}

<h2>Sayfayı Sil</h2>

<div class="alert alert-warning">
    <p><strong>@Model.Title</strong> başlıklı sayfayı silmek üzeresiniz.</p>
    <p>Bu işlem geri alınamaz. Emin misiniz?</p>
</div>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button class="btn btn-danger">Evet, sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
